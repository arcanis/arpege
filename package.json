{
  "name": "arpege",
  "version": "1.2.0",
  "packageManager": "yarn@4.0.0-rc.5",
  "description": "Parser generator for JavaScript",
  "keywords": [
    "parser generator",
    "PEG"
  ],
  "repository": "https://github.com/arcanis/arpege",
  "bugs": "https://github.com/arcanis/arpege/issues",
  "license": "MIT",
  "author": "David Majda <david@majda.cz> (http://majda.cz/)",
  "main": "sources/index.ts",
  "bin": {
    "peg": "sources/cli.ts"
  },
  "workspaces": [
    "examples",
    "extension",
    "scripts/pegjs"
  ],
  "dependencies": {
    "clipanion": "^3.2.0-rc.11",
    "lodash": "^4.17.21",
    "tslib": "^2.4.0",
    "typanion": "^3.8.0"
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/jest": "^27.5.1",
    "@types/lodash": "^4",
    "@types/node": "^17.0.31",
    "@yarnpkg/eslint-config": "^1.0.0-rc.5",
    "eslint": "^8.15.0",
    "jest": "^28.1.0",
    "pegjs": "workspace:*",
    "pretty-format": "^28.1.0",
    "rollup": "^2.72.1",
    "rollup-plugin-pegjs": "^2.1.3",
    "rollup-plugin-string": "^3.0.0",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  },
  "scripts": {
    "lkg": "yarn peg ./examples/grammar.pegjs.pegjs -o ./sources/lkg-parser.js --types",
    "prepack": "rm -rf lib && yarn rollup && yarn peg ./examples/grammar.pegjs.pegjs -o ./lib/grammar.pegjs.js",
    "postpack": "rm -rf lib",
    "peg": "yarn ts-node -T sources/cli.ts",
    "rollup": "NODE_OPTIONS=\"${NODE_OPTIONS:-} --require ts-node/register/transpile-only\" rollup -c"
  },
  "files": [
    "examples",
    "lib"
  ],
  "publishConfig": {
    "main": "lib/index",
    "bin": {
      "peg": "lib/cli"
    }
  }
}
